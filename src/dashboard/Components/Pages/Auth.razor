@page "/auth"

@using Microsoft.AspNetCore.Authorization

@attribute [Authorize]

<PageTitle>Auth</PageTitle>

<h1>You are authenticated</h1>

<AuthorizeView>
    <p>Hello @context.User.Identity?.Name!</p>
    @if (@context.User.IsInRole("admin")) {
        <p>You are an admin!</p>
    }
</AuthorizeView>
